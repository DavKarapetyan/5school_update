@using _5school.BLL.ViewModels;
@model List<SubStreamVM>

<h2 class="big-text">—— Ենթահոսքեր —— </h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="card mt-3">
                    <div class="row">
                        <div class="col-lg-6">
                            <img src="@item.ImageFile" class="img-fluid p-3" />
                        </div>
                        <div class="col-lg-6 justify-content-center">
                            <h2 class="big-text substream-text">- @item.Name -</h2>
                            <h4 style="color:#123278; text-align:center;">@item.StreamItem</h4>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>