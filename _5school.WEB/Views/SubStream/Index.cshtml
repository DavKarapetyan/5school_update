@using _5school.BLL.ViewModels;
@model List<SubStreamVM>
@foreach (var item in Model)
{
    <h2 class="big-text">—— @item.Name ——</h2>
    <div class="container box" data-aos="fade-up" data-aos-duration="1500">
        <div class="row">
            <div class="col-lg-6" data-aos="fade-right" data-aos-duration="1500">
                <img src="@item.ImageFile" class="img-fluid stream-img" />
            </div>
            <div class="col-lg-6" data-aos="fade-left" data-aos-duration="1500">
                <div class="row box">
                    <h3 class="big-text mt-0">@item.StreamItem</h3>
                </div>
                <div class="row box">
                    <h3 class="big-text mt-0">@item.Classes</h3>
                </div>
                <div class="row box">
                    <h3 class="big-text mt-0">@item.Teacher</h3>
                </div>
            </div>
        </div>
    </div>
}