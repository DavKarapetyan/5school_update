@model List<TeacherVM>
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="content container-fluid">
    <a class="btn btn-success modal-open" asp-action="AddEdit" asp-controller="Teacher">Add</a>
    <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead class="student-thread">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Group Name</th>
                <th>Image</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(a => !a.IsDeleted))
            {
                <tr role="row">
                    <td class="sorting_1">@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.GroupName</td>
                    <td>@item.ImagePath</td>
                    <td>@item.Position</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Teacher" asp-route-id="@item.Id" class="btn btn-danger modal-open" style="color:white;">
                            <i class="feather-x-square"></i>
                            Delete
                        </a>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true" fdprocessedid="zjjg3k">
                                <i class="feather-edit"></i>
                                Edit
                            </button>
                            <div class="dropdown-menu" style="">
                                <a class="dropdown-item modal-open" asp-action="AddEdit" asp-route-id="@item.Id" asp-route-culture="@CultureType.en">Edit English</a>
                                <a class="dropdown-item modal-open" asp-action="AddEdit" asp-route-id="@item.Id" asp-route-culture="@CultureType.am">Edit Armenian</a>
                                <a class="dropdown-item modal-open" asp-action="AddEdit" asp-route-id="@item.Id" asp-route-culture="@CultureType.ru">Edit Russian</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>