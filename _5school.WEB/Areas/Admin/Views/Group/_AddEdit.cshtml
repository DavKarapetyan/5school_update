@using _5school.BLL.ViewModels;
@using _5school.DAL.Entities;
@model GroupVM
@{
    var actionText = Model.Id == 0 ? "Add" : "Edit";
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">@actionText</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form method="post" asp-action="AddEdit" asp-controller="Group" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="modal-body">
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Name" class="form-label">Title</label>
                    <input type="text" class="form-control" placeholder="Enter title" asp-for="Name">
                </div>
            </div>

            <input asp-for="Culture" hidden />

            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>